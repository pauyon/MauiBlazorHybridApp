
@if (IsLoading)
{
    <MudProgressLinear Indeterminate="true"/>
}
else
{
    @if (Blog != null)
    {
        <MudCard>
            <MudCardHeader>
                <MudText Typo="Typo.h4">@Blog.Name</MudText>
                </MudCardHeader>
                <MudCardContent>
                    <MudGrid>
                        <MudItem>
                            <MudImage Src="@Blog.Url" Height="250" />
                        </MudItem>
                        <MudItem>
                            @Blog.Description
                        </MudItem>
                    </MudGrid>
                </MudCardContent>
                <MudCardActions>
            </MudCardActions>
        </MudCard>
    }
    else
    {
        <MudText Typo="Typo.h3">Blog not found.</MudText>
    }
}


@code {

    [Parameter]
    public bool IsLoading { get; set; }

    [Parameter]
    public Blog? Blog { get; set; }
}
